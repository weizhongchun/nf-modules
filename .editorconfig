# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.{md,yml,yaml,html,css,scss,js,cjs,json}]
indent_size = 2

[*.{Rmd,Rnw,r,R}]
indent_size = 2

[*.{nf,config}]
indent_size = 4
